{
  "name": "@subspace/vdf",
  "description": "High-performance WebAssembly implementation of Verifiable Delay Functions (VDF) supporting Pietrzak and Wesolowski algorithms with optimized verification",
  "keywords": [
    "crypto",
    "cryptography",
    "webassembly",
    "wasm",
    "emscripten",
    "vdf",
    "verifiable-delay-function",
    "pietrzak",
    "wesolowski",
    "proof-of-time",
    "blockchain",
    "optimized-verification",
    "fast-verification"
  ],
  "version": "0.1.1",
  "homepage": "https://github.com/Obad94/vdf",
  "author": "Nazar Mokrynskyi <nazar@mokrynskyi.com>",
  "contributors": [
    "Obad94 <obad94@github> (Current Fork Maintainer 2025 - Added Fast Verification)"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/Obad94/vdf.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "./build.sh && node scripts/patch-vdf-export.js",
    "build:prod": "NODE_ENV=production ./build.sh && node scripts/patch-vdf-export.js",
    "clean": "rm -rf dist target",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "test": "npm run build && npm run test-only",
    "test-only": "ts-node node_modules/.bin/tape tests/**/*.ts",
    "test:coverage": "nyc npm run test-only",
    "test:performance": "npm run build && node dist/performance-test.js",
    "test:verification": "npm run build && node -e \"require('./tests/verification-test.js')\"",
    "prepublishOnly": "npm run clean && npm run build:prod && npm test",
    "verify": "node -e \"const vdf = require('./dist/index.js'); vdf().then(lib => { console.log('✅ VDF library verified'); console.log('⚡ Fast verification enabled:', typeof lib.verify === 'function'); });\""
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/tape": "^4.2.33",
    "nyc": "^15.1.0",
    "tape": "^5.0.0",
    "ts-node": "^10.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.0",
    "uglify-es": "^3.3.9"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist/**",
      "tests/**"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
